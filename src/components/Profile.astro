---

import { Image } from '@astrojs/image/components';

import meImage from '@assets/img/me.png';

---

<div class="profile">
    <div class="image">
		<Image
            class="profile-pic"
            src={meImage}
            format="webp"
            alt="Me"
            title="This is me!"
            width="225"
            height="225"
        />
    </div>

    <div class="socials">
        
    </div>

    <h1>Hi! I'm Simon.</h1>
</div>

<style>
    .profile {
        margin: auto;
    }

    .profile-pic {
        border-radius: 50%;
        -webkit-box-shadow: 0px 5px 15px 5px rgba(0, 0, 0, 0.15); 
        box-shadow: 0px 5px 15px 5px rgba(0, 0, 0, 0.15);
    }

    h1 {
        color: white;
        letter-spacing: 1px;
        text-align: center;
        font-weight: 400;
    }
</style>
