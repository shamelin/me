---

import Layout from '@layouts/Layout.astro';
import Profile from '@components/Profile.astro';

---

<Layout title="Simon Hamelin - About me">
	<div id="content">
		<Profile />
	</div>
</Layout>

<style is:global>
	html, body {
		margin: 0;
		padding: 0;
	}

	#background {
		pointer-events: none;
		position: fixed;
		top: 0;
		left: 0;
	}

	#content {
		position: absolute;
		top: 0;
		left: 0;
		z-index: 1;
		display: flex;
		margin: auto;
		width: 100%;
		height: 100%;
	}
</style>

<script>
	import { Background } from '@scripts/Background';
	import { CornerFluid } from '@scripts/CornerFluid';

	const background = new Background();
	const cornerFluid = new CornerFluid("bottom-left", "rgba(0, 0, 0, 0.15)", 900, 10, 1, 0.75);
	const cornerFluid2 = new CornerFluid("top-right", "rgba(0, 0, 0, 0.25)", 900, 10, 1, 0.75);

	background.addElement(cornerFluid);
	background.addElement(cornerFluid2);
	background.draw();
</script>
